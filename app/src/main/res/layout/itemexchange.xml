<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/lineRow"
            android:shrinkColumns="*"
            android:contextClickable="true"
            android:stretchColumns="*"
            android:background="@android:color/white"
            android:elevation="5dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxWidth="0sp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgFlag"
                        android:src="@drawable/f_european_union"
                        android:layout_weight="1"
                        android:maxWidth="0sp"
                        android:adjustViewBounds="true"
                        android:text="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/textCurrency"
                        android:textSize="@dimen/text_margin"
                        android:layout_weight="3"
                        android:maxWidth="0sp"
                        />
                </TableRow>

                <TextView
                    android:id="@+id/textBid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textAsk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textNbu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:id="@+id/textTitle"
                    android:textSize="@dimen/text_margin"
                    android:textColor="@android:color/background_light"
                    android:maxWidth="0sp" />

                <TextView
                    android:id="@+id/textTrendBid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="22"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp" />

                <TextView
                    android:id="@+id/textTrendAsk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="333333"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp" />

                <TextView
                    android:id="@+id/textNbuTrend"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="44"
                    android:textSize="@dimen/text_margin"
                    android:gravity="right"
                    android:maxWidth="0sp" />

            </TableRow>

        </TableLayout>

</LinearLayout>